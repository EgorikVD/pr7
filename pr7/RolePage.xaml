<Page x:Class="pr7.RolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pr7"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RolePage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox x:Name="RoleBox" Width="100" >
                <ComboBoxItem>  Администратор </ComboBoxItem>
                <ComboBoxItem>  Менеджер </ComboBoxItem>
                <ComboBoxItem>  Пользователь </ComboBoxItem>
            </ComboBox>
            <Button x:Name="RoleButton" Content="Выбрать" Click="RoleButton_Click" Margin="0 5 0 0"/>
        </StackPanel>
        
    </Grid>
</Page>
