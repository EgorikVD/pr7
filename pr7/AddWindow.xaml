<Window x:Class="pr7.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr7"
        mc:Ignorable="d"
        Title="Добавить/Редактировать сотрудника" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Имя:" FontSize="18" Margin="0 0 0 5"/>
            <TextBox x:Name="NameBox" FontSize="18" Width="150"/>

            <TextBlock Text="Фамилия:" FontSize="18" Margin="0 0 0 5"/>
            <TextBox x:Name="LastBox" FontSize="18" Width="150"/>

            <TextBlock Text="Возраст:" FontSize="18" Margin="0 0 0 5"/>
            <TextBox x:Name="AgeBox" FontSize="18" Width="150"/>

            <TextBlock Text="Должность:" FontSize="18" Margin="0 0 0 5"/>
            <TextBox x:Name="PositionBox" FontSize="18" Width="150"/>

            <Button x:Name="SaveButton" Content="Сохранить" Width="100" Click="SaveButton_Click" Margin="0 10"/>
        </StackPanel>
    </Grid>
</Window>
